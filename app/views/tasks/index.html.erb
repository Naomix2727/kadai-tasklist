<h1> Task一覧 </h1> 

<% if @tasks.any? %>
 <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">タスク</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <th scope="row"><%= link_to task.id, task_path(task) %></th>
                <td><%= task.content %></td>
                <td><%= task.status %></td>
            </tr>
        <% end %>
      </tbody>
  </table>
  <div>
      <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>
