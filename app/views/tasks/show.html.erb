<h1>id: <%= @task.id %> のTask詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>No</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to 'このTaskを編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このTaskを削除する', @task, method: :delete, data: { confirm: '本当に削除してもよろしいでしょうか？' }, class: 'btn btn-danger' %>

